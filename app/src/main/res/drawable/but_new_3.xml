<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="5dip" android:color="#D2691E" />
            <gradient android:angle="90" android:startColor="#CD90F8" android:endColor="#CD90F8" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="5dip" android:color="#D2691E" />
            <gradient android:angle="90" android:startColor="#D2691E" android:endColor="#D2691E" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="3dip" android:color="#D2691E" />
            <gradient android:angle="90" android:startColor="#D2691E" android:endColor="#D2691E" />
        </shape>
    </item>
</selector>